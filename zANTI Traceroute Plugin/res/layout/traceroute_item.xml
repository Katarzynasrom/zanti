<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:paddingLeft="4px" android:paddingRight="6px"
		android:background="@drawable/rounded_gradient_item"
	android:paddingTop="2dp" android:paddingBottom="10dp">

	<LinearLayout android:layout_width="fill_parent"
		android:gravity="right|center_vertical"
		android:layout_height="fill_parent" 
		android:layout_marginTop="2px"
		android:paddingRight="12dp"/>
	<Button android:layout_width="wrap_content" android:background="@drawable/globes_32"
		android:layout_height="wrap_content" android:layout_marginRight="2px"
		android:layout_alignParentRight="true" android:id="@+id/ViewOnMapButton"
		android:visibility="gone" />
	<TextView android:layout_width="fill_parent"
		android:layout_marginTop="1px"
		android:textColor="@android:color/white"
		android:gravity="right|center_vertical"
		android:layout_height="26px" android:id="@+id/ttl"
		android:paddingRight="12dp"></TextView>
	<TextView android:layout_width="wrap_content"
		android:paddingLeft="6px" 
		android:textSize="20dip" android:textColor="@android:color/white"
		android:layout_height="wrap_content" android:id="@+id/ipaddress"
		></TextView>
	<TextView android:layout_width="wrap_content"
		android:paddingLeft="6px" 
		android:layout_height="wrap_content" android:id="@+id/nameaddress"
		android:layout_below="@id/ipaddress" 
		></TextView>
	<TextView android:layout_width="wrap_content"
		android:paddingLeft="6px" 
		android:layout_height="wrap_content" android:id="@+id/ms"
		android:layout_below="@id/nameaddress"
		></TextView>
	<TextView android:layout_width="wrap_content"
		android:paddingLeft="6px" 
		android:layout_height="wrap_content" android:id="@+id/location"
		android:layout_below="@id/ms"
		></TextView>

</RelativeLayout>
